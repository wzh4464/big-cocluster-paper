{
    "cSpell.words": [
        "bioinformatics"
    ],
    "latex-workshop.latex.build.forceRecipeUsage": true,
    "makefile.configureOnOpen": false,
    // pick first recipe
    "latex-workshop.latex.recipe.default": "first",
    "latex-workshop.view.autoFocus.enabled": true,
    // no auto save
    "files.autoSave": "off",
    // latex build on save
    "latex-workshop.latex.autoBuild.run": "onSave",
    // latex first recipe
    "latex-workshop.latex.recipes": [
        {
            "name": "arara",
            "tools": [
                "arara"
            ]
        },
        {
            "name": "latexmk-cd",
            "tools": [
                "latexmk-cd"
            ]
        }
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "arara",
            "command": "arara",
            "args": [
                "%DOC%",
                "-v"
            ]
        },
        {
            "name": "latexmk-cd",
            "command": "latexmk",
            "args": [
                "-cd",
                "-pdf",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-outdir=../build/%DOCFILE%",
                "%DOC%"
            ]
        }
    ],
    "latex-workshop.view.outline.sections": [
        "part",
        "chapter",
        "section",
        "subsection|RC",
        "subsubsection"
    ],
    // Search for PDFs in build directory
    "latex-workshop.latex.outDir": "%DIR%/../build/%DOCFILE%"
}
